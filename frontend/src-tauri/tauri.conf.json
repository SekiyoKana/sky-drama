{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Sky-Drama",
  "version": "0.1.0",
  "identifier": "com.sekiyo.skydrama",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Sky-Drama",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/backend_api"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets"
    ]
  },
  "plugins": {
     "shell": {} 
  }
}